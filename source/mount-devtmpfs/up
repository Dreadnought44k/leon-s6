if { s6-mkdir -p -m1777 /dev/mqueue }
if { s6-mount -o noexec,nosuid,nodev -n -t mqueue mqueue /dev/mqueue }
if { s6-mkdir -p -m 0755 -- /dev/pts }
if { s6-mount -wt devpts -o noexec,nosuid,gid=0,mode=0600 devpts /dev/pts }
if { s6-mkdir -p -m0755 /dev/shm }
if { s6-mount -o mode=1777,nosuid,nodev -n -t tmpfs shm /dev/shm }




